@model NumsViewModel
@{ 
    int num = (int)ViewData["i"];
}


@for (int i = num; i < num + 5; i++)
{
    <div class="form-group row">
        <div class="col-md-5">
            <p>Número @(i + 1)</p>
            <input asp-for="NumerosDecimales[i]" class="form-control" required/>
        </div>
    </div>
}